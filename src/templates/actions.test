import * as actionType from '../actionTypes';
import * as action from '../actions';

// ./node_modules/.bin/jest ./src/containers/'<nameof>'/__tests__/actions.test.js --env=jsdom
describe('<'<NameOf>' /> actions', () => {
  it('should have fetchDataAsync action returning expected object', () => {
    const expectedResult = {
      type: actionType.FETCH_DATA_ASYNC,
    };
    expect(action.fetchDataAsync()).toEqual(expectedResult);
  });

  it('should have fetchDataSuccess action returning expected object', () => {
    const results = { foo: 'bar' };
    const expectedResult = {
      type: actionType.FETCH_DATA_SUCCESS,
      payload: { results },
    };

    expect(action.fetchDataSuccess(results)).toEqual(expectedResult);
  });

  it('should have fetchDataFailure action returning expected object', () => {
    const error = new Error('foo');
    const expectedResult = {
      type: actionType.FETCH_DATA_FAILURE,
      payload: { error },
    };
    expect(action.fetchDataFailure(error)).toEqual(expectedResult);
  });

  it('should have reportError action returning expected object', () => {
    const error = new Error('foo');
    const expectedResult = {
      type: actionType.REPORT_ERROR,
      payload: { error },
    };
    expect(action.reportError(error)).toEqual(expectedResult);
  });
});
